{% extends 'base.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>DueDate</th>
                <td>{{ mission.dueDate ? mission.dueDate|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ mission.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mission_index') }}">Retour / </a>

    <a href="{{ path('app_mission_edit', {'id': mission.id}) }}">Modifier</a>

    {{ include('mission/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ employee.birthDate ? employee.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ employee.gender.value }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ employee.photo }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
            <tr>
                <th>HireDate</th>
                <td>{{ employee.hireDate ? employee.hireDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ employee.isVerified ? 'Yes' : 'No' }}</td>
            </tr>

            <tr>
                <th style="color:orange">DEMANDES</th>
                <td>
                    {% for demand in employee.demands %}
                        <div>{{ demand.type }} => {{ demand.status == null ? "En attente" : (demand.status == 1 ? "Accepté" : "Refusé") }}</div>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th style="color:blue">SALAIRES</th>
                {% for salary in employee.salaries %}
                    <td>
                        <div>{{ salary.salary }}</div>
                    </td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_employee_index') }}">back to list</a>

    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}">edit</a>

    {{ include('employee/_delete_form.html.twig') }}
{% endblock %}
